@model SIERRHH.Models.PuestosVacantes

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>


<div class="row">
    <div class="col"></div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">

                <h5>Editar puesto vacante</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdPuesto" />
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label">Descripción</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="IdSector" class="control-label">Sector</label>
                        <select asp-for="IdSector" class="form-control">
                            <option value="">Seleccione un sector...</option>
                            @foreach (var sector in ViewBag.Sectores)
                            {
                                <option value="@sector.IdSector">@sector.NombreSector</option>

                            }
                        </select>
                        <span asp-validation-for="IdSector" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Estado" class="control-label"></label>
                        <select asp-for="Estado" class="form-control">
                            <option selected value="">Seleccione un estado...</option>
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                            <option value="Concluido">Concluido</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="FechaPublicacion" class="control-label">Fecha de publicación</label>
                        <input asp-for="FechaPublicacion" class="form-control" />
                        <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Modalidad" class="control-label"></label>
                        <select asp-for="Modalidad" class="form-control select">
                            <option selected value="">Seleccione una modalidad...</option>
                            <option value="Presencial">Presencial</option>
                            <option value="Virtual">Virtual</option>
                            <option value="Bimodal">Bimodal</option>
                        </select>
                        <span asp-validation-for="Modalidad" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        <a class="btn btn-primary mt-2" asp-controller="PuestosVacantes" asp-action="Index">Volver</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="col"></div>
    
</div>


<div style="height: 90px;"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
