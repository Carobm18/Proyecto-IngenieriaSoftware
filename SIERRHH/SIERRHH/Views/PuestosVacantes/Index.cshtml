@model IEnumerable<SIERRHH.Models.PuestosVacantes>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-image: url('/img/Fondo15.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>


<h3>
    Puestos Vacantes
</h3>

<p>
    <a class="btn-generales btn-primary" asp-action="Create">Ir a crear puestos vacantes</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPublicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modalidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSector)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modalidad)
            </td>
            <td>
                    <a asp-action="Edit" class="btn-generales btn-primary" asp-route-id="@item.IdPuesto">Editar</a>
                    <a asp-action="Delete" class="btn-generales btn-danger" asp-route-id="@item.IdPuesto">Eliminar</a>
                    <a asp-controller="PuestoAptitudes" asp-action="Create" class="btn-generales btn-success" asp-route-id="@item.IdPuesto">Agregar Aptitudes</a>
            </td>
        </tr>
}
    </tbody>
</table>
