@model SIERRHH.Models.Concurso

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>


<div class="row">
   
    <div class="col-md"></div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Editar concurso</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdConcurso" class="control-label"></label>
                        <input asp-for="IdConcurso" class="form-control" />
                        <span asp-validation-for="IdConcurso" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="IdPuesto" />
                    <input type="hidden" asp-for="IdEmpleado" />
                    <div class="form-group mt-2">
                        <label asp-for="ExperienciaPuesto" class="control-label"></label>
                        <input asp-for="ExperienciaPuesto" class="form-control" />
                        <span asp-validation-for="ExperienciaPuesto" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Puntaje" class="control-label"></label>
                        <input asp-for="Puntaje" class="form-control" />
                        <span asp-validation-for="Puntaje" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        <a class="btn btn-primary mt-2" asp-action="Index">Volver</a>
                    </div>
                </form>
            </div>
        </div>


    </div>
    <div class="col-md"></div>

    
</div>

