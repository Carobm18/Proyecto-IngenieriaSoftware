@model SIERRHH.Models.Concurso

@{
    ViewData["Title"] = "Create";
}


<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>


<div class="row">
    <div class="col-md"></div>
    <div class="col-md-4">

        <div class="card">
            <div class="card-header">
                <h5>Concurso</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdConcurso" class="control-label" hidden></label>
                        <input asp-for="IdConcurso" class="form-control" hidden />
                        <span asp-validation-for="IdConcurso" class="text-danger" hidden></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="IdPuesto" class="control-label">Puesto a concursar :</label>
                        <input asp-for="nombrePuesto" class="form-control" readonly />
                        <input asp-for="IdPuesto" class="form-control" readonly hidden />
                        <span asp-validation-for="IdPuesto" class="text-danger"></span>
                    </div>
                    <div class="form-group  mt-2">
                        <label asp-for="IdEmpleado" class="control-label">Tu nombre:</label>
                        <input asp-for="nombreEmpleado" class="form-control" readonly />
                        <input asp-for="IdEmpleado" class="form-control" readonly hidden />
                        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="ExperienciaPuesto" class="control-label">Experiencia en puestos similares</label>
                        <input asp-for="ExperienciaPuesto" class="form-control" />
                        <span asp-validation-for="ExperienciaPuesto" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Puntaje" class="control-label" hidden></label>
                        <input asp-for="Puntaje" class="form-control" hidden />
                        <span asp-validation-for="Puntaje" class="text-danger" hidden></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Concursar" class="btn btn-success"/>
                        <a asp-controller="" class="btn btn-primary mt-2" asp-action="">Volver</a>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
    <div class="col-md"></div>
</div>


