@model SIERRHH.Models.Capacitacion

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-image: url('/img/Fondo15.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div class="row">
    
    <div class="col-md"></div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Editar concurso</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdCapacitacion" />
                    <div class="form-group mt-2">
                        <label asp-for="IdEmpleado" class="control-label" hidden></label>
                        <input asp-for="IdEmpleado" class="form-control" hidden/>
                        <span asp-validation-for="IdEmpleado" class="text-danger" hidden></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="NombreCapacitacion" class="control-label"></label>
                        <input asp-for="NombreCapacitacion" class="form-control" />
                        <span asp-validation-for="NombreCapacitacion" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Lugar" class="control-label"></label>
                        <input asp-for="Lugar" class="form-control" />
                        <span asp-validation-for="Lugar" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Year" class="control-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Estado" class="control-label"></label>
                        <select asp-for="Estado" class="form-control select">
                            <option selected value="">Seleccione un estado...</option>
                            <option value="En Curso">En Curso</option>
                            <option value="Finalizado">Finalizado</option>

                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        <a class="btn btn-primary mt-2" asp-controller="PerfilProfesional" asp-action="MiPerfil">Volver</a>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
    <div class="col-md"></div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
