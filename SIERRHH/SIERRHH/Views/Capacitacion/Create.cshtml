@model SIERRHH.Models.Capacitacion

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>


<div class="row">

    <div class="col-md-4">
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Crear una capacitación</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdEmpleado" class="control-label" hidden></label>
                        <input asp-for="IdEmpleado" class="form-control" hidden />
                        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="NombreCapacitacion" class="control-label">Nombre de capacitación</label>
                        <input asp-for="NombreCapacitacion" class="form-control" />
                        <span asp-validation-for="NombreCapacitacion" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Lugar" class="control-label">Lugar donde se realizó</label>
                        <input asp-for="Lugar" class="form-control" />
                        <span asp-validation-for="Lugar" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Year" class="control-label">Año</label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Estado" class="control-label">Estado</label>
                        <select asp-for="Estado" class="form-control select">
                            <option selected value="">Seleccione un estado...</option>
                            <option value="En Curso">En Curso</option>
                            <option value="Finalizado">Finalizado</option>
                          
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        <a asp-controller="PerfilProfesional" class="btn btn-primary mt-2" asp-action="MiPerfil">Volver</a>
                        
                    </div>
                </form>
            </div>
        </div>

       
    </div>

    <div class="col-md-4">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
