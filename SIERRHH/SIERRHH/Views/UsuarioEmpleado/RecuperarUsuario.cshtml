@model SIERRHH.Models.UsuarioEmpleado

@{
    ViewData["Title"] = "View";
}


<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div class="row">
    <div class="col-md"></div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Recuperar usuario</h5>
            </div>
            <div class="card-body">
                <form asp-action="View">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label asp-for="Correo" class="control-label">Correo electrónico</label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                        
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Enviar" class="btn btn-success" />
                        <a class="btn btn-primary mt-2" asp-controller="UsuarioEmpleado"  asp-action="Login">Volver</a>
                    </div>
                </form>
            </div>
        </div>
       
    </div>
    <div class="col-md"></div>
</div>

<div>
    
</div>

