@model SIERRHH.Models.Correo

@{
    ViewData["Title"] = "RecuperarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div class="row">
    <div class="col-md"></div>
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-warning " role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close">
            </button>

            <strong>@TempData["Mensaje"]</strong>

        </div>
    }
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Recuperar usuario</h5>
            </div>
            <div class="card-body">
                <form asp-action="RecuperarUsuario">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label asp-for="correo" class="control-label">Correo electrónico</label>
                        <input asp-for="correo" class="form-control" type="email"/>
                        <span asp-validation-for="correo" class="text-danger"></span>
                        
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Enviar" class="btn btn-success" />
                        <a class="btn btn-primary mt-2" asp-controller="UsuarioEmpleado"  asp-action="Login">Volver</a>
                    </div>
                </form>
            </div>
        </div>
       
    </div>
    <div class="col-md"></div>
</div>

<div>
    
</div>

