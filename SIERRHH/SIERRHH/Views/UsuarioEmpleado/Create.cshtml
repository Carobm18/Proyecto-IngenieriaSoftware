@model SIERRHH.Models.UsuarioEmpleado

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div class="row">
    <div class="col-md-4">
       
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Crear un usuario</h5>
            </div>
            <div class="card-body">
                <div class="card-title">
                    <h5>Ingrese los datos del usuario:</h5>
                </div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label asp-for="Correo" class="control-label">Correo electrónico</label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Password" class="control-label">Contraseña</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Rol" class="control-label">Rol</label>
                        <select asp-for="Rol" class="form-control">
                            <option value="">Seleccione un rol...</option>
                           
                            <option value="Administrador">Administrador</option>
                            <option value="Empleado">Empleado</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" readonly />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">Volver</a>
                    </div>
                </form>
              
                
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
   
    <div style="height: 90px;"></div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
