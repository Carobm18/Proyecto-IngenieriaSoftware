@model SIERRHH.Models.UsuarioEmpleado

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>


<div class="row">
    <div class="col-md"></div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Editar usuario</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdEmpleado" />
                    <div class="form-group mt-2">
                        <label asp-for="Correo" class="control-label">Correo electrónico</label>
                        <input asp-for="Correo" class="form-control" type="email" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Password" class="control-label" hidden>Contraseña</label>
                        <input asp-for="Password" class="form-control"  hidden />
                        <span asp-validation-for="Password" class="text-danger" hidden></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Rol" class="control-label">Rol</label>
                        <select asp-for="Rol" class="form-control">
                            <option value="">Seleccione un Rol..</option>
                            <option value="Admin">Admin</option>
                            <option value="Empleado">Empleado</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Estado" class="control-label"></label>
                        @if(Model.Estado== "Nuevo"){
                            <input asp-for="Estado" class="form-control" readonly />
                        }else{
                            <select asp-for="Estado" class="form-control">
                                <option value="">Seleccione un Estado..</option>

                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        }
                        
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-primary mt-2">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md"></div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
