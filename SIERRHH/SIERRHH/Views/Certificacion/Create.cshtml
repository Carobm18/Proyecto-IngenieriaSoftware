@model SIERRHH.Models.Certificacion

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>



<div class="row">
    <div class="col-md">
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3>
                    Crear certificación
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdEmpleado" class="control-label" hidden></label>
                        <input asp-for="IdEmpleado" class="form-control" hidden />
                        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="NombreCertificacion" class="control-label">Nombre de la certificación</label>
                        <input asp-for="NombreCertificacion" class="form-control" />
                        <span asp-validation-for="NombreCertificacion" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Entidad" class="control-label">Entidad</label>
                        <input asp-for="Entidad" class="form-control" />
                        <span asp-validation-for="Entidad" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="IdSector" class="control-label">Sector</label>
                        <select asp-for="IdSector" class="form-control">
                            <option value="">Seleccione un sector...</option>
                            @foreach (var sector in ViewBag.Sectores)
                            {
                                <option value="@sector.IdSector">@sector.NombreSector</option>
                            }
                        </select>
                        <span asp-validation-for="IdSector" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        <a asp-controller="PerfilProfesional" class="btn btn-primary mt-2" asp-action="MiPerfil">Volver</a>

                    </div>
                </form>
            </div>
        </div>

       
    </div>
    <div class="col-md">
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
