@model SIERRHH.Models.PerfilProfesional

@{
    ViewData["Title"] = "MiPerfil";
}
<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }

    .scrollable-section {
        max-height: 300px; /* Ajusta esta altura según sea necesario */
        overflow-y: auto;
    }

    .custom-card {
        /* Ajusta el tamaño y estilo de las cartas */
        height: 300px; /* Puedes cambiar esta altura según tus necesidades */
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 20px;
    }

    .custom-card2 {
        /* Ajusta el tamaño y estilo de las cartas */
        height: 225px; /* Puedes cambiar esta altura según tus necesidades */
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 80px;
        margin-bottom: 10px;
    }
</style>

<div class="row">

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <center><h3>Mi perfil profesional</h3></center>
                        </div>
                        <div class="card-body">
                            <form asp-action="MiPerfil">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-2">
                                            <label asp-for="Nombre" class="control-label">Nombre</label>
                                            <input asp-for="Nombre" class="form-control" readonly />
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-2">
                                            <label asp-for="Apellido" class="control-label">Apellidos</label>
                                            <input asp-for="Apellido" class="form-control" readonly />
                                            <span asp-validation-for="Apellido" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="col-md-6">

                                        <div class="form-group mb-2">
                                            <label asp-for="FechaNacimiento" class="control-label">Fecha de nacimiento</label>
                                            <input asp-for="FechaNacimiento" class="form-control" readonly />
                                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-2">
                                            <label asp-for="Telefono" class="control-label">Teléfono</label>
                                            <input asp-for="Telefono" class="form-control" readonly />
                                            <span asp-validation-for="Telefono" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="form-group mb-2">
                                        <label asp-for="Descripcion" class="control-label">Descripción</label>
                                        <input asp-for="Descripcion" class="form-control" readonly />
                                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-2">
                                        <label asp-for="Direccion" class="control-label">Dirección</label>
                                        <input asp-for="Direccion" class="form-control" readonly />
                                        <span asp-validation-for="Direccion" class="text-danger"></span>
                                    </div>
                                    
                                </div>

                            </form>

                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card ">
                    <div class="card-body">
                        <h5 class="card-title">Foto Perfil</h5>
                        <!-- Mostrar la imagen de perfil -->
                        <center>
                            <img src="~/img/ejemplofoto.jpg" alt="Foto de perfil" class="img-fluid rounded-circle" width="200" />
                        </center>

                    </div>
                </div>
                <div class="card custom-card2 scrollable-section">
                    <div class="card-body">
                        <h5 class="card-title">Aptitudes</h5>
                       
                        @foreach (var item in Model.listaAptitudes)
                        {
                            <li>@item.Descripcion</li>
                        }


                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="card custom-card scrollable-section">

                    <div class="card-body">
                        <h5 class="card-title">Titulos</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Descripcion</th>
                                    <th>Centro de Estudio</th>
                                    <th>Grado</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.listaTitulos)
                                {
                                    <tr>
                                        <td>@item.Descripcion</td>
                                        <td>@item.CentroEstudio</td>
                                        <td>@item.nombreGrado</td>


                                    </tr>
                                }
                                
                                <a asp-controller="Titulos" asp-action="Index" class="btn-generales btn-success" asp-route-id="@Model.IdEmpleado">Ver más</a>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card custom-card scrollable-section">

                    <div class="card-body">
                        <h5 class="card-title">Puestos Desempeñados</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Empresa</th>
                                    <th>Tiempo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.listaPuestosDesemp)
                                {
                                    <tr>
                                        <td>@item.Descripcion</td>
                                        <td>@item.Empresa</td>
                                        <td>@item.Tiempo</td>
                                    </tr>
                                }
                               
                                <a asp-controller="PuestosDesempenados" asp-action="Index" class="btn-generales btn-success" asp-route-id="@Model.IdEmpleado">Ver más</a>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card custom-card scrollable-section">

                    <div class="card-body">
                        <h5 class="card-title">Certificaciones</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Entidad</th>
                                    <th>Sector</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.listaCertificacion)
                                {
                                    <tr>
                                        <td>@item.NombreCertificacion</td>
                                        <td>@item.Entidad</td>
                                        <td>@item.nombreSector</td>

                                    </tr>
                                }
                               
                                <a asp-controller="Certificacion" asp-action="Index" class="btn-generales btn-success" asp-route-id="@Model.IdEmpleado">Ver más</a>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card custom-card scrollable-section">

                    <div class="card-body">
                        <h5 class="card-title">Capacitaciones</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Lugar</th>
                                    <th>Year</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.listaCapacitaciones)
                                {
                                    <tr>
                                        <td>@item.NombreCapacitacion</td>
                                        <td>@item.Lugar</td>
                                        <td>@item.Year</td>
                                    </tr>
                                }
                                
                                <a asp-controller="Capacitacion" asp-action="Index" class="btn-generales btn-success" asp-route-id="@Model.IdEmpleado">Ver más</a>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-md"></div>

    <div style="height: 90px;"></div>
</div>
