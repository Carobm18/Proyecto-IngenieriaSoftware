@model SIERRHH.Models.PuestosDesempenados

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div class="row">
    <div class="col-md"></div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Agregar puesto desempeñado</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label asp-for="IdEmpleado" class="control-label" hidden></label>
                        <input asp-for="IdEmpleado" class="form-control" hidden />
                        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Descripcion" class="control-label">Descripción del puesto</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Empresa" class="control-label">Empresa</label>
                        <input asp-for="Empresa" class="form-control" />
                        <span asp-validation-for="Empresa" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Tiempo" class="control-label">Tiempo</label>
                        <input asp-for="Tiempo" class="form-control" />
                        <span asp-validation-for="Tiempo" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Agregar" class="btn btn-success" />
                        
                            <a asp-controller="PerfilProfesional" class="btn btn-primary mt-2" asp-action="MiPerfil">Volver</a>
                        
                    </div>
                </form>
            </div>
        </div>
      
    </div>
    <div class="col-md"></div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
