@model SIERRHH.Models.PuestoAptitudes

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PuestoAptitudes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdAptitudes" class="control-label"></label>
                <select asp-for="IdAptitudes" class="form-control">
                    <option value="">Selecciona una aptitud</option>
                    @foreach (var aptitud in ViewBag.Aptitudes)
                    {
                        <option value="@aptitud.IdAptitud">@aptitud.Descripcion</option>
                    }
                </select>
                <span asp-validation-for="IdAptitudes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPuesto" class="control-label" hidden></label>
                <input asp-for="IdPuesto" class="form-control" hidden />
                <span asp-validation-for="IdPuesto" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

