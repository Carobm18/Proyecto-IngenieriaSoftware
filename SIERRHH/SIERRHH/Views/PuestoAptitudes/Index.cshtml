@model IEnumerable<SIERRHH.Models.PuestoAptitudes>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-image: url('/img/Fondo15.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<h5>Aptitudes del puesto</h5>

<hr/>
<a asp-controller="PuestosVacantes" class="btn-generales btn-primary" asp-area="" asp-action="Details" asp-route-id="@Model.FirstOrDefault()?.IdPuesto">Volver</a>


<div class="table-wrapped">
    <table class="table table-light table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    Descripcion
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody  class="table-group-divider">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>

                    <td>

                        <a asp-action="Delete" class="btn-generales btn-danger" asp-route-id="@item.IdAptitudes" asp-route-name="@item.IdPuesto">Eliminar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

