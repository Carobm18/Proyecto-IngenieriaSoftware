@model SIERRHH.Models.PerfilAptitudes

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-image: url('/img/Fondo11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Agregar aptitud</h5>
            </div>
            <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="IdEmpleado" class="control-label" hidden></label>
                            <input asp-for="IdEmpleado" class="form-control" hidden />
                            <span asp-validation-for="IdEmpleado" class="text-danger" hidden></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="IdAptitudes" class="control-label">Aptitud</label>
                            <select asp-for="IdAptitudes" class="form-control">
                                <option value="0">Selecciona una aptitud...</option>
                                @foreach (var aptitud in ViewBag.Aptitudes)
                                {
                                    <option value="@aptitud.IdAptitud">@aptitud.Descripcion</option>
                                }
                            </select>
                            <span asp-validation-for="IdAptitudes" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Agregar" class="btn btn-success" />
                            <a asp-controller="PerfilProfesional" class="btn btn-primary mt-2" asp-action="MiPerfil">Volver</a>
                        </div>
                    </form>
                
            </div>
        </div>
    </div>
    
    
    <div class="col-md-4"></div>
</div>



